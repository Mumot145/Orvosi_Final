@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Home</h1>
    <p class="lead">Click on buttons below to display either random file or all files.</p>
    <table>
        <tr>
            <td>
                <p style="padding-left: 80px;"><input type="button" value="Show Random" class="btn btn-primary btn-lg" onclick="location.href='@Url.Action("Details", "Employee", new { info = "random" })'" /></p>
            </td>
            <td>
                <p style="padding-left: 80px;"><input type="button" value="Show All" class="btn btn-primary btn-lg" onclick="location.href='@Url.Action("Details", "Employee", new { info = "all" })'" /></p>
            </td>
            <td>
                <img style="padding-left: 80px;" src="/Content/shortline.jpg" />
            </td>
            @using (Html.BeginForm("SearchDetails", "Employee"))
            {
                <td style="padding-left: 80px;">
                    <input type="text" name="search" />
                </td>
                        <td><input type="submit" style="padding-left: 10px;" class="btn btn-primary btn-lg" value="Search" /></td>
            }

        </tr>
    </table>

</div>


